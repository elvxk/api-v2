generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Projects {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title      String
  desc       String
  stack      String
  demo       String
  image      String
  is_tool    Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model SSLRequests {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  domains     String[]  // array of domains
  accountKey  String
  accountUrl  String
  orderJson   Json      // simpan object order ACME
  challenges  Json      // simpan semua challenges [{record, value, authz, challenge}]
  status      String    @default("pending") // pending | verified | issued | failed
  certificate String?   // simpan certificate
  privateKey  String?   // simpan private key
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
